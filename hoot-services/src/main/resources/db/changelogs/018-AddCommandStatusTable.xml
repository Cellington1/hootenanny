<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">
    <changeSet author="jong.choi" id="3" context="default">
        <comment>Command Status table for hoot service</comment>

        <!--
            CREATE TABLE public.command_status
            (
                id character varying(64) NOT NULL,
                job_id character varying(64) NOT NULL REFERENCES job_status (job_id),
                start timestamp with time zone NOT NULL,
                command text NOT NULL,
                finish timestamp with time zone,
                exit_code integer,
                stdout text,
                stderr text,
                CONSTRAINT command_status_pkey PRIMARY KEY (id)
            );
        -->
        <createTable tableName="command_status">
            <column name="id" type="varchar(64)">
                <constraints nullable="false"/>
            </column>
            <column name="job_id" type="varchar(64)">
                <constraints nullable="true"/>
            </column>
            <column name="start" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="finish" type="timestamp">
                <constraints nullable="true"/>
            </column>
            <column name="exit_code" type="int">
                <constraints nullable="true"/>
            </column>
            <column name="command" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="stdout" type="text">
                <constraints nullable="false"/>
            </column>
            <column name="stderr" type="text">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey
                constraintName="command_status_pkey"
                tableName="command_status"
                columnNames="id" />

        <addForeignKeyConstraint
                constraintName="job_status_jobid_fkey"
                referencedTableName="job_status"
                baseColumnNames="job_id"
                baseTableName="command_status"
                referencedColumnNames="job_id" />
    </changeSet>
</databaseChangeLog>
